.tracks-graph-stats {
    .ct-vertical {
        font-size: 12px;
    }

    .ct-chart .ct-point {
        stroke-width: 8px;
        stroke-linecap: round;
    }

    .chartist-tooltip{
        position: absolute;
        display: inline-block;
        min-width: 90px;
        padding: 10px;
        background: #edffff;
        border: 1px #608BD6 solid;
        border-radius: 3px;
        color: #453D3F;
        font-weight: 700;
        text-align: center;
        pointer-events: none;
        z-index: 1;
    }

    .tooltip-arrow{
        position: absolute;
        width: 0;
        height: 0;
        border-left: 15px solid transparent;
        border-right: 15px solid transparent;
        border-top: 15px solid #608BD6;
    }

}